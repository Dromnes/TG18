<Page ux:Class="lightControlPage" ux:Name="lightControlPage">
	<JavaScript File="lightControlPage.js" />
	<StackPanel>
		<LinearGradient AngleDegrees="105">
			<GradientStop Offset=".4" Color="{colorPalette.bckgLightGreen}" />
			<GradientStop Offset="1" Color="{colorPalette.bckgDarkGreen}" />
		</LinearGradient>

		<StackPanel Dock="Top">
			<Panel Color="{colorPalette.mdRed}" Height="45">
				<Text Value="Lysstyring" FontSize="22" Alignment="Center" TextColor="#fff"/>
			</Panel>
		</StackPanel>
		<Grid RowCount="6" ColumnCount="4">
			<Each Items="{lightControlButtons}">
				<customButtonCircle Height="80" Margin="0, 20, 0, 10" Text="{text}" TextColor="{textColor}" FontSize="24">
					<LinearGradient AngleDegrees="120">
						<GradientStop Offset=".4" Color="{color}" />
						<GradientStop Offset="1" Color="{colorPalette.mdBlack}" />
					</LinearGradient>
				</customButtonCircle>
			</Each>
		</Grid>
	</StackPanel>
</Page>