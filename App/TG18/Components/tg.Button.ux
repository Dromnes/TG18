<Panel HitTestMode="LocalBoundsAndChildren" ux:Class="tg.Button" ux:Name="customButton" Margin="4">
	<string ux:Property="Text" />
	<float4 ux:Property="TextColor" />
	<Font ux:Property="Font" />
	<int ux:Property="FontSize" />

	<Text Value="{ReadProperty customButton.Text}" Alignment="Center" Font="{ReadProperty customButton.Font}" FontSize="{ReadProperty customButton.FontSize}" Color="{ReadProperty customButton.TextColor}" />

	<WhilePressed>
        <Scale Factor=".95" Duration=".08" Easing="QuadraticOut" />
	</WhilePressed>
</Panel>