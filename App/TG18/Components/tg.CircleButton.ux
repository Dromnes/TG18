<Circle HitTestMode="LocalBoundsAndChildren" ux:Class="tg.CircleButton" ux:Name="circleButton">
	<string ux:Property="Text" />
	<float4 ux:Property="TextColor" />
	<Font ux:Property="Font" />
	<int ux:Property="FontSize" />

	<Text Value="{ReadProperty customButtonCircle.Text}" Alignment="Center" Font="{ReadProperty customButtonCircle.Font}" FontSize="{ReadProperty customButtonCircle.FontSize}" Color="{ReadProperty customButtonCircle.TextColor}" />

	<Shadow Size="5" Angle="70" />

	<WhilePressed>
		<Scale Factor=".9" Duration=".15" />
	</WhilePressed>
</Circle>